<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${dubbo.application.name}" owner="taylor" organization="com.taylor"/>

	<dubbo:provider serialization="kryo" codec="dubbo" server="netty" client="netty" threadpool="cached"
		connections="1" loadbalance="consistenthash" cluster="failfast" delay="-1" timeout="${dubbo.timeout}" />
		 
    <dubbo:registry protocol="${dubbo.registry.protocol}" address="${dubbo.registry.address}"/>
	
    <dubbo:monitor protocol="registry"/>

    <dubbo:protocol name="${dubbo.protocol.name}" serialization="kryo" port="${dubbo.protocol.port}"/>
    
    <dubbo:service interface="com.taylor.api.shop.service.TestService" ref="testServiceImpl" protocol="dubbo" delay="-1" version="${service.version}"/>
    
    <dubbo:service interface="com.taylor.api.shop.service.ShopUserService" ref="shopUserServiceImpl" protocol="dubbo" delay="-1" version="${service.version}"/>
    
	</beans>